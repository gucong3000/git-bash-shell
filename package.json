{
  "author": "gucong3000",
  "bugs": {
    "url": "https://github.com/gucong3000/git-bash-shell/issues"
  },
  "description": "Use Git Bash as cross-platform shell for Windows",
  "dependencies": {
    "git-win": "^2.0.0",
    "lru-cache": "^4.1.3"
  },
  "devDependencies": {
    "codecov": "^3.1.0",
    "eclint": "^2.8.1",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "expect.js": "^0.3.1",
    "fs-extra": "^7.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0"
  },
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=4"
  },
  "homepage": "https://github.com/gucong3000/git-bash-shell#readme",
  "keywords": [
    "child_process",
    "windows",
    "shell",
    "posix",
    "dash",
    "bash",
    "sh"
  ],
  "license": "MIT",
  "main": "index.js",
  "name": "git-bash-shell",
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true
  },
  "os": [
    "win32"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gucong3000/git-bash-shell.git"
  },
  "scripts": {
    "preinstall": "(node -e \"require('util').promisify.call\" || node -e \"require('util.promisify')\") 2>nul || npm i util.promisify",
    "postinstall": "node lib/postinstall",
    "lint:eclint": "eclint check $(git ls-files | tee /tmp/git-files)",
    "lint:eslint": "eslint $(grep \"\\.js$\" /tmp/git-files)",
    "pretest": "npm run lint:eclint && npm run lint:eslint",
    "test": "nyc mocha --no-timeouts",
    "report-coverage": "codecov"
  },
  "version": "2.0.0"
}
